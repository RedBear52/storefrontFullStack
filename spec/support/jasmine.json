{
  "spec_dir": "dist/**",
  "spec_files": [
    "**/tests/*[s]pec.js"
  ],
  "helpers": [
    "../../**/helpers/reporter.js"
  ],
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "displayStacktrace": "pretty",
        "displayFailuresSummary": true,
        "displayFailuredSpec": true,
        "displaySuiteNumber": true,
        "displaySpecDuration": true
      }
    }
  ],
  "stopSpecOnExpectationFailure": false,
  "random": false
}
